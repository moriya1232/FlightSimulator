<UserControl x:Class="FlightSimulator.Views.GridAndButtomsConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Views="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="connect and settings">
            <Setter Property="Button.Background" Value="PapayaWhip"/>
            <Setter Property="Button.Height" Value="Auto"/>
            <Setter Property="Button.Width" Value="Auto"/>
            <Setter Property="Button.FontSize" Value="14"/>
            <Setter Property="Button.Margin" Value="10"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <GroupBox FontSize="20" HorizontalAlignment="Center" DockPanel.Dock="Top">
                <WrapPanel>
                    <Button Name="Connect" Content="Connect" Style="{StaticResource connect and settings}" Margin="15"/>
                    <Button Name="Settings" Content="Settings" Style="{StaticResource connect and settings}" Margin="15"/>
                </WrapPanel>
            </GroupBox>
            <Views:FlightBoard/>

        </DockPanel>
    </Grid>
</UserControl>
